{
  "name": "@bcts/crypto",
  "version": "1.0.0-alpha.5",
  "type": "module",
  "description": "Blockchain Commons Cryptographic Utilities for TypeScript",
  "license": "BSD-2-Clause-Patent",
  "author": "Leonardo Custodio <leonardo@custodio.me>",
  "homepage": "https://github.com/leonardocustodio/blockchain-commons",
  "repository": {
    "type": "git",
    "url": "https://github.com/leonardocustodio/blockchain-commons",
    "directory": "packages/crypto"
  },
  "bugs": {
    "url": "https://github.com/leonardocustodio/blockchain-commons/issues"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.iife.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.iife.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "blockchain-commons",
    "sha256",
    "chacha20",
    "x25519",
    "ecdsa",
    "schnorr",
    "ed25519",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@bcts/rand": "workspace:*",
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.0",
    "@noble/hashes": "^1.8.0"
  },
  "devDependencies": {
    "@bcts/eslint": "workspace:*",
    "@bcts/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "tsdown": "^0.17.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
