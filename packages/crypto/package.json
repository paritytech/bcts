{
  "name": "@blockchain-commons/crypto",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "description": "Blockchain Commons Cryptographic Utilities for TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.iife.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.iife.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "blockchain-commons",
    "sha256",
    "chacha20",
    "x25519",
    "ecdsa",
    "schnorr",
    "ed25519",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@blockchain-commons/rand": "workspace:*",
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.0",
    "@noble/hashes": "^1.8.0"
  },
  "devDependencies": {
    "@blockchain-commons/eslint": "workspace:*",
    "@blockchain-commons/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.1",
    "typescript": "^5.9.3"
  }
}
