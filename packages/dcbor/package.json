{
  "name": "@blockchain-commons/dcbor",
  "version": "1.0.0-alpha.2",
  "type": "module",
  "description": "Blockchain Commons Deterministic CBOR (dCBOR) for TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.iife.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.iife.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "jest --testPathIgnorePatterns=cli.test.ts",
    "test:watch": "jest --watch",
    "test:cli": "jest cli.test.ts",
    "test:examples": "npm run build && node scripts/test-examples.js",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "cbor",
    "dcbor",
    "deterministic",
    "blockchain-commons",
    "encoding",
    "serialization",
    "codec",
    "binary"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@blockchain-commons/eslint": "workspace:*",
    "@blockchain-commons/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/collections": "^5.1.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.1",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "byte-data": "^19.0.1",
    "collections": "^5.1.13"
  }
}
