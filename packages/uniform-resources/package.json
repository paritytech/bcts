{
  "name": "@blockchain-commons/uniform-resources",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "description": "Blockchain Commons Uniform Resources (UR) for TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.global.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.global.js",
      "default": "./dist/index.mjs"
    },
    "./prelude": {
      "types": "./dist/prelude.d.mts",
      "import": "./dist/prelude.mjs",
      "require": "./dist/prelude.cjs",
      "default": "./dist/prelude.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "uniform-resources",
    "ur",
    "blockchain-commons",
    "cbor",
    "dcbor",
    "encoding",
    "deterministic"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@blockchain-commons/dcbor": "workspace:*"
  },
  "devDependencies": {
    "@blockchain-commons/eslint": "workspace:*",
    "@blockchain-commons/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.3",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.1",
    "typescript": "^5.9.3"
  }
}
