{
  "name": "@blockchain-commons/envelope",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "description": "Gordian Envelope for TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.global.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.global.js",
      "default": "./dist/index.mjs"
    },
    "./prelude": {
      "types": "./dist/prelude.d.mts",
      "import": "./dist/prelude.mjs",
      "require": "./dist/prelude.cjs",
      "default": "./dist/prelude.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "node tests/test-all.mjs",
    "test:types": "node tests/test-types.mjs",
    "test:salt": "node tests/test-salt.mjs",
    "test:compress": "node tests/test-compress.mjs",
    "test:encrypt": "node tests/test-encrypt.mjs",
    "test:elide": "node tests/test-elide.mjs",
    "test:signature": "node tests/test-signature.mjs",
    "test:attachment": "node tests/test-attachment.mjs",
    "test:recipient": "node tests/test-recipient.mjs",
    "test:expression": "node tests/test-expression.mjs",
    "test:proof": "node tests/test-proof.mjs",
    "test:string": "node tests/test-string.mjs",
    "demo": "node tests/demo.mjs",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "envelope",
    "cbor",
    "dcbor",
    "gordian",
    "blockchain-commons",
    "privacy",
    "encryption",
    "deterministic",
    "encoding",
    "serialization"
  ],
  "author": "Blockchain Commons",
  "license": "BSD-2-Clause-Patent",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlockchainCommons/bc-envelope-ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@blockchain-commons/eslint": "workspace:*",
    "@blockchain-commons/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.7",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@blockchain-commons/dcbor": "workspace:*",
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "libsodium-wrappers": "^0.7.13",
    "pako": "^2.1.0"
  }
}
