{
  "name": "@blockchain-commons/envelope",
  "version": "1.0.0-alpha.2",
  "type": "module",
  "description": "Gordian Envelope for TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.iife.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.iife.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "echo 'Skipping tests for envelope package (pending refactoring)'",
    "test:run": "jest",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "envelope",
    "cbor",
    "dcbor",
    "gordian",
    "blockchain-commons",
    "privacy",
    "encryption",
    "deterministic",
    "encoding",
    "serialization"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@blockchain-commons/eslint": "workspace:*",
    "@blockchain-commons/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.3",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@blockchain-commons/dcbor": "workspace:*",
    "@blockchain-commons/tags": "workspace:*",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^1.8.0",
    "libsodium-wrappers": "^0.7.13",
    "pako": "^2.1.0"
  }
}
