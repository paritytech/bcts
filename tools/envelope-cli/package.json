{
  "name": "@bcts/envelope-cli",
  "version": "1.0.0-alpha.16",
  "type": "module",
  "description": "Gordian Envelope command line tool",
  "license": "BSD-2-Clause-Patent",
  "contributors": [
    {
      "name": "Leonardo Custodio",
      "email": "leonardo.custodio@parity.io",
      "url": "https://github.com/leonardocustodio"
    },
    {
      "name": "Karim Jedda",
      "email": "karim@parity.io",
      "url": "https://github.com/KarimJedda"
    }
  ],
  "homepage": "https://bcts.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leonardocustodio/bcts.git",
    "directory": "tools/envelope-cli"
  },
  "bugs": {
    "url": "https://github.com/leonardocustodio/bcts/issues"
  },
  "bin": {
    "envelope": "dist/cli.mjs"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "envelope",
    "gordian",
    "cli",
    "cbor",
    "blockchain-commons",
    "encryption"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@bcts/eslint": "workspace:*",
    "@bcts/tsconfig": "workspace:*",
    "@types/node": "^25.0.6",
    "eslint": "^9.39.2",
    "tsdown": "^0.19.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@bcts/components": "workspace:*",
    "@bcts/crypto": "workspace:*",
    "@bcts/dcbor": "workspace:*",
    "@bcts/envelope": "workspace:*",
    "@bcts/envelope-pattern": "workspace:*",
    "@bcts/known-values": "workspace:*",
    "@bcts/provenance-mark": "workspace:*",
    "@bcts/rand": "workspace:*",
    "@bcts/tags": "workspace:*",
    "@bcts/uniform-resources": "workspace:*",
    "@bcts/xid": "workspace:*",
    "commander": "^14.0.0"
  }
}
